<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

  <persistence-unit name="LeinstrandIL" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>no.leinstrandil.database.model.MenuEntry</class>
    <class>no.leinstrandil.database.model.Page</class>
    <class>no.leinstrandil.database.model.Resource</class>
    <class>no.leinstrandil.database.model.Node</class>
    <class>no.leinstrandil.database.model.TextNode</class>
    <class>no.leinstrandil.database.model.Role</class>
    <class>no.leinstrandil.database.model.User</class>

<!-- <shared-cache-mode>NONE</shared-cache-mode> -->

    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/leinstrandil" />
      <property name="javax.persistence.jdbc.user" value="lilweb" />
      <property name="javax.persistence.jdbc.password" value="dff180" />
<!-- <property name="javax.persistence.sharedCache.mode" value="NONE"/> -->
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />
    </properties>
  </persistence-unit>

</persistence>