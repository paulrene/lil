<!--=== Content Part ===-->
<div class="container">
    <div class="row magazine-page">
        <!-- Begin Content -->
        <div class="col-md-9">

            <!--Magazine News-->
            <div class="magazine-news">
                <div class="row">
#foreach($index in [0..1])
    #set($post = $newsList.get($index))
                    <div class="col-md-6">
    #if($facebookService.hasPicture($post))
                        <div class="magazine-news-img" style="min-height:200px;">
                            <a href="$post.getLinkUrl()"><img style="width:100%" class="img-responsive" src="$facebookService.getMediumPictureUrl($post)" alt=""></a>
                        </div>
    #end
                        <h3><a href="$facebookService.getLinkUrl($post)">$facebookService.getTitle($post)</a></h3>
                        <div class="by-author">
                            <strong>av $facebookService.getAuthor($post)</strong>
                            <span>/ $facebookService.getPublished($post)</span>
                        </div> 
                        <p>$facebookService.getBody($post)</p>
                    </div>
#end
                </div>
            </div>
            <!--End Magazine News-->

            <hr>

            <!--Magazine News-->
            <div class="magazine-news">
#foreach($row in [0..2])
#set($offset = $row * 3)
                <div class="row">
#foreach($column in [0..2])
#set($index = $offset + $column + 2)
    #set($post = $newsList.get($index))
                    <div class="col-md-4">
    #if($facebookService.hasPicture($post))
                        <div class="magazine-news-img" style="min-height:160px;">
                            <a href="$post.getLinkUrl()"><img style="width:100%" class="img-responsive" src="$facebookService.getMediumPictureUrl($post)" alt=""></a>
                        </div>
    #end
                        <h3><a href="$facebookService.getLinkUrl($post)">$facebookService.getTitle($post)</a></h3>
                        <div class="by-author">
                            <strong>av $facebookService.getAuthor($post)</strong>
                            <span>/ $facebookService.getPublished($post)</span>
                        </div> 
                        <p>$facebookService.getBody($post)</p>
                    </div>
#end

                </div>
#end
            </div>
            <!--End Magazine News-->
        </div>
        <!-- End Content -->

        <!-- Begin Sidebar -->
        <div class="col-md-3">

            <!-- Quick Links -->
            <div class="magazine-sb-categories">
                <div class="headline headline-md"><h2>Hurtiglenker</h2></div>
                <div class="row">
                    <ul class="list-unstyled col-xs-6">
                        <li><a href="#">Revolution Slider</a></li>
                        <li><a href="#">Parralax Page</a></li>
                        <li><a href="#">Backgrounds</a></li>
