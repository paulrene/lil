                        <li><a href="#">Layer Slider</a></li>
                        <li><a href="#">Bootstrap 2x</a></li>
                        <li><a href="#">Fixed Header</a></li>
                        <li><a href="#">Best Template</a></li>
                        <li><a href="#">And Many More</a></li>
                    </ul>
                </div>
            </div>
            <!-- End Quick Links -->

            <!-- Photo Stream -->
            <div class="headline"><h3>Bilder</h3></div>
            <ul class="list-unstyled blog-photos margin-bottom-30">
#foreach($post in $photoList)
                <li><a href="$post.getLinkUrl()" target="_blank"><img class="hover-effect" alt="" src="$facebookService.getSmallPictureUrl($post)"></a></li>
#end
            </ul>
            <!-- End Photo Stream -->
        </div>
        <!-- End Sidebar -->
    </div>
</div><!--/container-->     
